<body>
    <div>
        <h1>Add New farm</h1>
        <form action="/farms" method="POST">
            <div>
                <label for="name">Enter farm name:</label>
                <input type="text" id="name" name="name" placeholder="farm name">
            </div>
            <div>
                <label for="city"> Enter the city:</label>
                <input type="text" id="city" name="city" placeholder="city">
            </div>
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="enter your Email">
            </div>
         
         
         
            <button>Submit</button>

        
        </form>
    </div>
    <a href="/products">
        <h4>Show all products</h4>
    </a>


</body>

